<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Надпись "Обратная связь" -->
        <TextView
            android:id="@+id/textFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Обратная связь"
            android:textSize="24sp"
            android:gravity="center"
            android:padding="16dp" />

        <!-- Поле для ввода имени -->
        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Имя"
            android:layout_below="@id/textFeedback"
            android:layout_marginTop="16dp" />

        <!-- Поле для ввода адреса -->
        <EditText
            android:id="@+id/editAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Адрес"
            android:layout_below="@id/editName"
            android:layout_marginTop="16dp" />

        <!-- Поле для ввода электронной почты -->
        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_below="@id/editAddress"
            android:layout_marginTop="16dp" />

        <!-- Поле для ввода темы сообщения -->
        <EditText
            android:id="@+id/editSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Тема"
            android:layout_below="@id/editEmail"
            android:layout_marginTop="16dp" />

        <!-- Поле для ввода текста сообщения (многострочное) -->

        <!-- Кнопка отправки формы -->
        <EditText
            android:id="@+id/editMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editSubject"
            android:layout_marginTop="18dp"
            android:hint="Текст сообщения"
            android:inputType="textMultiLine"
            android:lines="10" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отправить"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editMessage"
            android:layout_marginTop="16dp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>